<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p1img1">


    <ImageSwitcher
        android:id="@+id/ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="275sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>


    <ImageView
        android:id="@+id/lobo"
        android:layout_width="150dp"
        android:layout_height="165dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/lobo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/bocadillo"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="3dp"
        android:background="@drawable/bocadillo"
        app:layout_constraintBottom_toBottomOf="@id/lobo"
        app:layout_constraintEnd_toStartOf="@+id/esp1"
        app:layout_constraintStart_toStartOf="parent" />

    <Space
        android:id="@+id/esp1"
        android:layout_width="135dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/lobo"
        app:layout_constraintEnd_toEndOf="parent" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@id/lobo"
        app:layout_constraintEnd_toStartOf="@+id/esp1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bocadillo">

        <com.aar.app.proyectoLlodio.TypeWriter
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/andika"
            android:stackFromBottom="true"
            android:textSize="17sp"
            android:textStyle="bold" />

    </ScrollView>

    <Button
        android:id="@+id/buttonEmpezar"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:background="@drawable/p2_border3"
        android:textSize="15sp"
        android:textColor="@color/blanco"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView"
        app:layout_constraintEnd_toStartOf="@+id/lobo"
        app:layout_constraintStart_toStartOf="@+id/bocadillo"
        app:layout_constraintTop_toTopOf="@+id/bocadillo" />

    <Button
        android:id="@+id/btnskip"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/lobo"
        android:background="@drawable/next"
        android:onClick="saltar"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
