<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    coverflow:layout_constraintTop_toTopOf="parent"
    coverflow:layout_constraintBottom_toBottomOf="parent"
    coverflow:layout_constraintLeft_toLeftOf="parent"
    coverflow:layout_constraintRight_toRightOf="parent"
    tools:context=".Pantalla2">

    <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
        android:id="@+id/coverflow"
        coverflow:coverHeight="200dp"
        coverflow:coverWidth="150dp"
        coverflow:maxScaleFactor="2"
        coverflow:reflectionGap="0px"
        coverflow:rotationThreshold="0.5"
        coverflow:scalingThreshold="0.5"
        coverflow:spacing="0.6"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.nightonke.boommenu.BoomMenuButton
        android:id="@+id/bmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bmb_buttonEnum="ham"
        app:bmb_piecePlaceEnum="piecePlace_ham_2"
        app:bmb_buttonPlaceEnum="buttonPlace_ham_2"
        app:bmb_hamWidth="0dp"
        app:bmb_normalColor="@color/blancoColor"
        app:bmb_hamHeight="0dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/traductor"
            android:layout_gravity="center" />
    </com.nightonke.boommenu.BoomMenuButton>

</RelativeLayout>