<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p1img1">

    <ImageView
        android:id="@+id/lobo"
        android:layout_width="140sp"
        android:layout_height="160sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="10sp"
        android:src="@drawable/lobo"/>

    <ImageView
        android:id="@+id/bocadillo"
        android:layout_width="270sp"
        android:layout_height="160sp"
        android:layout_alignBottom="@id/lobo"
        android:padding="10dp"
        android:background="@drawable/bocadillo"
        android:layout_marginBottom="5sp"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="270sp"
        android:layout_height="145sp"
        android:padding="10dp"
        android:layout_alignBottom="@id/lobo"
        android:layout_marginBottom="20sp">

        <com.aar.app.proyectoLlodio.TypeWriter
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="Arial"
            android:textSize="17sp"
            android:textStyle="bold"
            android:stackFromBottom="true"/>
    </ScrollView>
    <Button
        android:id="@+id/btnskip"
        android:onClick="menuAndy"
        android:text=""
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/lobo"
        android:background="@drawable/next"/>
</RelativeLayout>