<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a2_img1">

    <ImageView
        android:id="@+id/lobo"
        android:layout_width="155sp"
        android:layout_height="170sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="20sp"
        android:src="@drawable/lobo" />

    <ImageView
        android:id="@+id/bocadillo"
        android:layout_width="280sp"
        android:layout_height="180sp"
        android:layout_alignBottom="@id/lobo"
        android:layout_marginEnd="-30dp"
        android:layout_marginBottom="-10sp"
        android:layout_toStartOf="@+id/lobo"
        android:background="@drawable/bocadillo"
        android:padding="10dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="265sp"
        android:layout_height="165sp"
        android:layout_alignBottom="@id/lobo"
        android:layout_marginEnd="-25dp"
        android:layout_marginBottom="0sp"
        android:layout_toStartOf="@+id/lobo"
        android:padding="10dp">


        <com.aar.app.proyectoLlodio.TypeWriter
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="Arial"
            android:textSize="17sp"
            android:textStyle="bold"
            android:stackFromBottom="true"/>

    </ScrollView>


    <Button
        android:id="@+id/buttonEmpezar"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_alignEnd="@+id/bocadillo"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="70dp"
        android:text="Test galderak"
        android:textColor="@color/blanco"
        android:background="@drawable/p2_border3"
        android:visibility="invisible"/>

    <Button
        android:onClick="lanzarActividad"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/lobo"
        android:background="@drawable/next"
        android:text=""
        android:visibility="visible"/>

</RelativeLayout>
