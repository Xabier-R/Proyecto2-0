<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a3_img1">

    <ImageView
        android:id="@+id/lobo"
        android:layout_width="155sp"
        android:layout_height="170sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="27sp"
        android:src="@drawable/lobo" />

    <ImageView
        android:id="@+id/bocadillo"
        android:layout_width="260sp"
        android:layout_height="200sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="300sp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/bocadillo" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="185sp"
        android:layout_height="155sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="300sp"
        android:layout_marginEnd="160sp"
        android:layout_marginBottom="30sp"
        android:scrollbars="vertical">


        <com.aar.app.proyectoLlodio.TypeWriter
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="Arial"
            android:textSize="17sp"
            android:textStyle="bold"
            android:stackFromBottom="true"/>


    </ScrollView>

    <Button
        android:id="@+id/buttonEmpezar"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="70dp"
        android:text="Ipuina entzun"
        android:visibility="invisible"
        android:textColor="@color/blanco"/>


</RelativeLayout>
