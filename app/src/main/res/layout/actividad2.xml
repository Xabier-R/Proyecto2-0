<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">


    <LinearLayout
        android:id="@+id/buttons"
        style="@style/estiloa4_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btnnext"
                style="@style/estiloa4_2"
                android:onClick="siguiente"
                android:text="@string/btnnext" />

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/preguntas"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/bocadillo"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtPregunta"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Prueba 1"
                android:textColor="@color/llodio">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/llodio">

                <RadioButton
                    android:id="@+id/btnRespuesta1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/btnRespuesta2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:textStyle="bold" />
            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layourAciertos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/txtAciertos"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearFragmento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="top"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">


    </LinearLayout>
</RelativeLayout>
